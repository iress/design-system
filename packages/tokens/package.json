{
  "name": "@iress-oss/ids-tokens",
  "version": "6.0.0-alpha.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./mapTokensToCssVariables": "./dist/helpers/mapTokensToCssVariables.js"
  },
  "files": [
    "build",
    "dist"
  ],
  "scripts": {
    "analyse": "yarn vite-bundle-visualizer",
    "build": "yarn cssVars && vite build",
    "build-storybook": "storybook build --stats-json",
    "dev": "concurrently \"yarn watch:cssVars\" \"yarn storybook\"",
    "dev:no-open": "concurrently \"yarn watch:cssVars\" \"yarn storybook --no-open\"",
    "clean": "rimraf build dist coverage src/generated storybook-static",
    "cssVars": "tsx plugins/generateCssVars.ts",
    "lint": "eslint . --ext=.js,.jsx,.ts,.tsx,.mjs,.cjs,.mdx --max-warnings=0",
    "storybook": "storybook dev -p 6007",
    "test": "vitest --config vitest.config.ts --watch",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.lib.json",
    "watch": "vite build --watch",
    "watch:cssVars": "nodemon --watch src --ignore src/generated --ext ts --exec yarn cssVars"
  },
  "devDependencies": {
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "4.0.7",
    "chalk": "^5.6.2",
    "colorjs.io": "^0.5.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-file-progress": "^3.0.2",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.1.0",
    "json5": "^2.2.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "radash": "^12.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "remark-gfm": "^4.0.1",
    "rimraf": "^6.1.0",
    "rollup-plugin-tree-shakeable": "^2.0.0",
    "storybook": "^9.0.0",
    "style-dictionary": "^5.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.1",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "4.0.7"
  },
  "peerDependencies": {
    "radash": "^12.1.0",
    "style-dictionary": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "radash": {
      "optional": true
    },
    "style-dictionary": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iress/design-system"
  }
}
