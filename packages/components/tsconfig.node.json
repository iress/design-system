{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "types": ["vitest/globals", "node", "mdx"]
  },
  "include": [
    "docs",
    "plugins",
    "**/*.{ts,tsx,mdx}",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "**/*.stories.tsx"
  ]
}
