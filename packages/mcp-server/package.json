{
  "name": "@iress-oss/ids-mcp-server",
  "version": "5.20.1",
  "description": "Model Context Protocol (MCP) server for Iress Design System (IDS) component library - provides AI assistants with contextual information about IDS components, design tokens, and usage patterns",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "ids": "dist/index.js"
  },
  "packageManager": "yarn@4.4.1",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "iress",
    "design-system",
    "component-library",
    "ui",
    "react",
    "ai-assistant"
  ],
  "author": "Iress",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc && chmod 755 ./dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "clean": "rm -rf dist",
    "collect": "tsx scripts/collect.ts",
    "generate": "tsx scripts/generate.ts",
    "guidelines": "tsx scripts/guidelines.ts"
  },
  "files": [
    "dist",
    "generated/docs/**/*",
    "README.md",
    "LICENSE.txt"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.22.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@types/minimist": "^1",
    "@types/node": "24.10.1",
    "@types/turndown": "5.0.5",
    "@typescript-eslint/eslint-plugin": "8.48.0",
    "@typescript-eslint/parser": "8.48.0",
    "@vitest/coverage-v8": "4.0.13",
    "commander": "12.1.0",
    "dotenv": "16.5.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-file-progress": "3.0.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-sonarjs": "3.0.5",
    "minimist": "^1.2.8",
    "playwright": "1.56.1",
    "prettier": "3.6.2",
    "prettier-plugin-sh": "0.18.0",
    "rimraf": "2.7.1",
    "tsx": "4.20.6",
    "turndown": "7.2.2",
    "turndown-plugin-gfm": "1.0.2",
    "typescript": "5.9.3",
    "vitest": "4.0.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iress/design-system"
  }
}
