{
  "name": "@iress-oss/ids-mcp-server",
  "version": "6.0.0-alpha.1",
  "description": "Model Context Protocol (MCP) server for Iress Design System (IDS) component library - provides AI assistants with contextual information about IDS components, design tokens, and usage patterns",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "ids": "dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "iress",
    "design-system",
    "component-library",
    "ui",
    "react",
    "ai-assistant"
  ],
  "author": "Iress",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf coverage dist",
    "collect": "tsx scripts/collect.ts",
    "dev": "tsx src/index.ts",
    "generate": "tsx scripts/generate.ts",
    "guidelines": "tsx scripts/guidelines.ts",
    "lint": "npx eslint . --max-warnings 0",
    "test": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "generated/docs",
    "README.md",
    "LICENSE.txt"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.5",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/minimist": "1.2.5",
    "@types/node": "24.10.0",
    "@types/turndown": "5.0.5",
    "@vitest/coverage-v8": "3.2.4",
    "minimist": "1.2.8",
    "playwright": "1.56.1",
    "rimraf": "6.1.0",
    "tsx": "4.20.6",
    "turndown": "7.2.2",
    "turndown-plugin-gfm": "1.0.2",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iress/design-system"
  }
}
