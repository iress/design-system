{
  "name": "@iress-oss/ids-mcp-server",
  "version": "5.20.0",
  "description": "Model Context Protocol (MCP) server for Iress Design System (IDS) component library - provides AI assistants with contextual information about IDS components, design tokens, and usage patterns",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "ids": "dist/index.js"
  },
  "packageManager": "yarn@4.4.1",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "iress",
    "design-system",
    "component-library",
    "ui",
    "react",
    "ai-assistant"
  ],
  "author": "Iress",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc && chmod 755 ./dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "clean": "rm -rf dist",
    "collect": "tsx scripts/collect.ts",
    "generate": "tsx scripts/generate.ts",
    "guidelines": "tsx scripts/guidelines.ts"
  },
  "files": [
    "dist",
    "generated/docs",
    "README.md",
    "LICENSE.txt"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.13.1",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@types/minimist": "^1",
    "@types/node": "22.15.30",
    "@types/turndown": "5.0.5",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "@vitest/coverage-v8": "3.2.4",
    "commander": "12.1.0",
    "dotenv": "16.5.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-file-progress": "1.5.0",
    "eslint-plugin-prettier": "5.5.3",
    "eslint-plugin-sonarjs": "3.0.2",
    "minimist": "^1.2.8",
    "playwright": "1.53.1",
    "prettier": "3.5.3",
    "prettier-plugin-sh": "0.17.4",
    "rimraf": "2.7.1",
    "tsx": "4.20.6",
    "turndown": "7.2.0",
    "turndown-plugin-gfm": "1.0.2",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
