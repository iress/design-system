{
  "name": "@iress/design-system-monorepo",
  "version": "0.0.0-development",
  "author": "Iress",
  "private": true,
  "packageManager": "yarn@4.10.3",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@iress-oss/ids-components": "^6.0.0-alpha.1",
    "@iress-oss/ids-storybook-config": "^0.2.0",
    "@iress-oss/ids-storybook-okta": "^0.1.1",
    "@iress-oss/ids-storybook-toggle-stories": "^0.1.0",
    "@iress-oss/ids-storybook-version-badge": "^0.1.0",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@storybook/addon-a11y": "10.0.8",
    "@storybook/addon-docs": "10.0.8",
    "@storybook/react-vite": "10.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vueless/storybook-dark-mode": "10.0.2",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-file-progress": "^3.0.2",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-sonarjs": "^3.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "pinst": "^3.0.0",
    "prettier": "^3.6.2",
    "puppeteer": "^23.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "10.0.8",
    "storybook-addon-tag-badges": "^3.0.2",
    "ts-dedent": "^2.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "7.2.2",
    "wait-on": "^9.0.3",
    "ws": "^8.18.3",
    "zx": "^8.8.5"
  },
  "scripts": {
    "build": "yarn monorepo run build",
    "check-coverage": "tsx ./scripts/check-coverage.ts",
    "dev": "concurrently \"wait-on tcp:6006 && wait-on tcp:6007 && yarn storybook\" \"yarn packages/components dev:no-open\" \"yarn packages/tokens dev:no-open\"",
    "dev:mcp": "concurrently \"wait-on tcp:6006 && wait-on tcp:6007 && STORYBOOK_MCP=true yarn storybook --no-open\" \"yarn packages/components dev:no-open\" \"yarn packages/tokens dev:no-open\"",
    "dev:kill": "kill $(lsof -ti tcp:6005) || true; kill $(lsof -ti tcp:6006) || true; kill $(lsof -ti tcp:6007) || true",
    "prepublish": "tsx ./scripts/storybook-addon-prepublish.ts",
    "prepare": "husky && yarn build",
    "build-storybook": "storybook build",
    "storybook": "storybook dev -p 6005",
    "storybook:serve-addon": "tsx ./scripts/storybook-addon-server.ts",
    "lint": "yarn monorepo run lint",
    "lint:mermaid": "tsx ./scripts/lint-mermaid.ts",
    "test": "yarn monorepo run test",
    "test:coverage": "yarn monorepo run test:coverage",
    "test:ci": "yarn test:coverage && yarn check-coverage --all",
    "typecheck": "yarn monorepo run typecheck",
    "monorepo": "yarn workspaces foreach -Ai --topological-dev --exclude=@iress/design-system-monorepo"
  }
}
